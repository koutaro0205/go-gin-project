# GraphQL schema example
#
# https://gqlgen.com/getting-started/
scalar Time

type Todo {
  id: Int!
  title: String!
  done: Boolean!
  createdAt: Time!
  updatedAt: Time!
}

input FetchTodo {
  id: Int!
}

type Query {
  todos: [Todo!]!
  todo(input: FetchTodo): Todo!
}

input NewTodo {
  title: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
